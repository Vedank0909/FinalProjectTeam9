<% include ../partials/header.ejs %>

    <!-- MAIN CONTENT -->
    <div class="container">
      <div class="row">
        <div class="container-fluid bg-1 text-center">
          <h1><%= title %></h1>
            <form class="form" method="post">
              <div class="form-group">
                <label for="NameTextField">Name</label>
                <input type="text" class="form-control" id="NameTextField"
                placeholder="Player Name" name="name" value=required>
              </div>
              <div class="form-group">
                <label for="teamnameTextField">Description</label>
                <input type="text" class="form-control" id="teamnameTextField"
                placeholder="Team Name" name="teamname" "  required>
              </div>
                <div class="form-group">
                <label for="tournamentnameTextField">Completed</label>
                <input type="text" class="form-control" id="tournamentTextField"
                placeholder="tournament name" name="completed" value="<%= tournaments.name %>"  required>
              </div>
            

              <button type="submit" class="btn btn-primary"><i class="fa fa-check-square-o"></i> Submit</button>
              <a href="/tournaments" class="btn btn-warning"><i class="fa fa-undo"></i> Cancel</a>
            </form>
        </div>
      </div>
    </div>

