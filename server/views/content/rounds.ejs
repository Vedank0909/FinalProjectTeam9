<% include ../partials/header.ejs %>

    <!-- MAIN CONTENT -->
    <div class="container">
      <div class="row">
        <div class="container-fluid bg-1 text-center">
          <h1><%= title %></h1>
            <form class="form" method="post">

                <div class="form-group">
                <% var round = 1; %>
                <% var matchno = 1; %>
                <label for="NameTextField" name = "roundno">Round<%= round %></label>
                
              </div>

             

                <div class="form-group">
                <label for="NameTextField">Name</label>
                <input type="text" class="form-control" id="NameTextField"
                placeholder="Player 2" name="pname<% round + 1%>" >
              </div>

                <div class="form-group">
                <label for="NameTextField">Name</label>
                <input type="text" class="form-control" id="NameTextField"
                placeholder="Winner" name="winner" >
              </div>

            

                <div class="form-group">
                <label for="tournamentnameTextField">Tournament Name</label>
                <input type="text" class="form-control" id="tournamentTextField"
                placeholder="tournament id" name="tid" value="<%= tournaments.id %>"  required>
              </div>
            

              <button type="submit" class="btn btn-primary"><i class="fa fa-check-square-o"></i> Submit</button>
              <a href="/rounds/<%= tournaments.id %>" class="btn btn-warning"><i class="fa fa-undo"></i> Cancel</a>
            </form>
        </div>
      </div>
    </div>

